CREATE TABLE IF NOT EXISTS `timu` (
  `timuid` int(11) NOT NULL AUTO_INCREMENT,
  `catid` int(11) NOT NULL COMMENT '题目分类id',
  `title` text NOT NULL COMMENT '题目标题',
  `type` int(11) NOT NULL COMMENT '1选择题2判断题',
  `correct` varchar(30) NOT NULL COMMENT '正确答案序号',
  `add_time_format` varchar(30) NOT NULL,
  `is_delete` int(11) NOT NULL DEFAULT '0',
  PRIMARY KEY (`timuid`)
) ENGINE=MyISAM  DEFAULT CHARSET=utf8 AUTO_INCREMENT=1 ;


CREATE TABLE IF NOT EXISTS `timu_answer` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `timuid` int(11) NOT NULL COMMENT '题目id',
  `name` text NOT NULL COMMENT '答案内容',
  `number` varchar(30) NOT NULL COMMENT '答案序号',
  `add_time_format` varchar(30) NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=MyISAM  DEFAULT CHARSET=utf8 AUTO_INCREMENT=1 ;